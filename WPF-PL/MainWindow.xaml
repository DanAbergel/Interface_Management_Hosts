<Window x:Class="WPF_PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="GridFather">
        <Grid Name="mainGrid" ShowGridLines="False" Visibility="Hidden">
            <Grid.Background>
                <ImageBrush ImageSource="D:\Belles Images\thumb2-hainan-island-4k-hotel-bungalow-sunset.jpg" Stretch="UniformToFill"/>
            </Grid.Background>
            <TextBlock Text="ברוכים הבאים " FontFamily="David" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="YellowGreen"/>

            <Button Name="buttonClient" Content="Client" HorizontalAlignment="Left" Margin="373,315,0,0" VerticalAlignment="Top" Width="75" Click="Client" RenderTransformOrigin="0.144,3.594" FontSize="25" Background="Aquamarine"  Foreground="Green" FontFamily="Gabriola" FontWeight="UltraBold"/>
            <Button Name="buttonProprietaire" Content="Proprietaire" HorizontalAlignment="Left" Margin="81,314,0,0" VerticalAlignment="Top" Width="234" Click="Proprietaire" FontSize="25" Background="Aquamarine" Foreground="Green" FontWeight="UltraBold" FontFamily="Gabriola" RenderTransformOrigin="0.518,1.642" Height="46"/>
            <Button Name="buttonAdministrateur" Content="Administrateur" HorizontalAlignment="Left" Margin="529,313,0,0" VerticalAlignment="Top" Width="171" FontSize="25"   Background="Aquamarine" Foreground="Green" FontWeight="UltraBold" FontFamily="Gabriola"  Click="buttonAdministrateur_Click" Height="46"/>

        </Grid>


        <Grid Name="clientGrid" Visibility="Visible">
            <Grid.Background>
                <ImageBrush ImageSource="D:\Belles Images\thumb2-hainan-island-4k-hotel-bungalow-sunset.jpg" Stretch="UniformToFill"/>
            </Grid.Background>
            <Button Name="addGuestRequestButton" Content="הוספת בקשת אירוח" FontFamily="David" HorizontalAlignment="Left" Margin="64,223,0,0" VerticalAlignment="Top" Width="160" RenderTransformOrigin="1.051,-1.355" FontSize="17" Click="addGuestRequestButton_Click" Height="23" Background="Aquamarine" Foreground="Green" FontWeight="UltraBold"/>
            <Button Name="updateGuestRequestButton" Content="עדכון בקשת אירוח" HorizontalAlignment="Left" Margin="323,219,0,0" VerticalAlignment="Top" Width="160" FontSize="17" FontFamily="David" Click="updateGuestRequestButton_Click" Height="25" Background="Aquamarine" Foreground="Green" FontWeight="UltraBold"/>
            <Button Name="deleteGuestRequestButton" Content="מחיקת בקשת אירוח" HorizontalAlignment="Left" Margin="568,221,0,0" VerticalAlignment="Top" Width="162" RenderTransformOrigin="0.549,0.719" FontSize="17" FontFamily="David" Click="deleteGuestRequestButton_Click" Height="25" Background="Aquamarine" Foreground="Green" FontWeight="UltraBold"/>
            <Button Name="returnButton" Content="חזור" HorizontalAlignment="Left" Margin="50,25,0,0" VerticalAlignment="Top" Width="75" FontSize="17" FontFamily="David" Click="returnButton_Click"/>



        </Grid>


        <Grid Name="proprietaireGrid" Visibility="Hidden">
            <Button Content="Button" HorizontalAlignment="Left" Margin="570,197,0,0" VerticalAlignment="Top" Width="75"/>

        </Grid>

        <Grid Name="administrateurGrid" Visibility="Hidden">


        </Grid>

    </Grid>
</Window>
    
